{
  "name": "the-infinite-library",
  "description": "The infinite library, a server-less ebook library deployed to an AWS cloud.",
  "version": "1.0.0",
  "repository": "git@github.com:acodeninja/the-infinite-library.git",
  "author": "Lawrence <lawrence@acode.ninja>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "lint": "eslint . --ext .js",
    "build": "webpack",
    "deploy": "if [ ! -d \"./build\" ]; then yarn build; fi && terraform init && terraform apply",
    "postinstall": "if [ ! -z \"$(which patch-package)\" ]; then patch-package; fi"
  },
  "engines": {
    "node": "12"
  },
  "jest": {
    "watchPathIgnorePatterns": [
      "node_modules",
      "build"
    ],
    "setupFiles": [
      "<rootDir>/setupJest.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "jest/globals": true
    },
    "ignorePatterns": [
      "build/*"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "plugins": [
      "babel",
      "jest"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "babel/semi": 1,
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "new-parens": [
        "error",
        "never"
      ],
      "no-console": "error"
    }
  },
  "dependencies": {
    "@gxl/epub-parser": "^2.0.2",
    "aws-sdk": "^2.655.0",
    "lodash.get": "^4.4.2",
    "lodash.has": "^4.5.2",
    "lodash.merge": "^4.6.2",
    "lodash.set": "^4.3.2",
    "source-map-support": "^0.5.16",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.0",
    "aws-sdk-mock": "^5.1.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "cli-progress": "^3.7.0",
    "dockerode": "^3.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-jest": "^23.8.2",
    "jest": "^25.2.7",
    "node-loader": "^0.6.0",
    "patch-package": "^6.2.2",
    "postinstall-postinstall": "^2.1.0",
    "regenerator-runtime": "^0.13.5",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "zip-a-folder": "^0.0.12"
  }
}
